@using SalonTrack.Models
// Views/ServiceTask/Create.cshtml
@model ServiceTask
@{
    ViewData["Title"] = "Yeni İş Əlavə Et";
}

<h2>Yeni İş Əlavə Et</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Təsvir</label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label">Qiymət (₼)</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
    </div>
    <div class="mb-3">
        <label class="form-label">Ödəniş Növü</label>
        <div class="form-check">
            <input asp-for="IsCredit" class="form-check-input" type="checkbox" />
            <label class="form-check-label" for="IsCredit">Nisyə kimi qeyd et</label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Yadda saxla</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>
