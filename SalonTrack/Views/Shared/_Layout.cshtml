<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SalonTrack</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SalonTrack.styles.css" asp-append-version="true" />

    <style>
        html {
            transition: background 0.5s, color 0.5s;
        }

        body {
            font-family: 'Segoe UI', sans-serif;
        }

            /* Light Mode */
            body.light-mode {
                background: linear-gradient(to right, #f8e1f4, #e1f0ff);
                color: #222;
            }

            /* Dark Mode */
            body.dark-mode {
                background: linear-gradient(to right, #1a1a, #16213e);
                color: #f1f1f1;
            }

                /* Dark Mode overrides */
                body.dark-mode .card,
                body.dark-mode .form-control,
                body.dark-mode .table,
                body.dark-mode input,
                body.dark-mode select {
                    background-color: #1e1e1e !important;
                    color: #f1f1f1 !important;
                    border-color: #444 !important;
                }

                    body.dark-mode .table th,
                    body.dark-mode .table td {
                        background-color: #1e1e1e !important;
                        color: #f1f1f1 !important;
                    }

                body.dark-mode .btn {
                    color: white !important;
                }

                body.dark-mode .alert {
                    background-color: #2a2a2a;
                    color: #ddd;
                    border-color: #444;
                }

                body.dark-mode input[type="date"] {
                    background-color: #1e1e1e;
                    color: #f1f1f1;
                }

        .navbar {
            transition: background 0.3s;
        }

        .light-mode .navbar {
            background-color: #fff !important;
            border-bottom: 2px solid #f8c6d8;
        }

        .dark-mode .navbar {
            background-color: #1f1f1f !important;
            border-bottom: 1px solid #444;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.6rem;
            color: #e91e63 !important;
        }

        .nav-link {
            color: inherit !important;
        }

        .footer {
            transition: background 0.3s, color 0.3s;
        }

        .light-mode .footer {
            background-color: #ffeef5;
            color: #666;
        }

        .dark-mode .footer {
            background-color: #1a1a1a;
            color: #aaa;
        }

        .theme-toggle-btn {
            background: none;
            border: none;
            font-size: 1.5rem;
            cursor: pointer;
            transition: transform 0.2s;
        }

            .theme-toggle-btn:hover {
                transform: scale(1.2);
            }
    </style>
</head>
<body class="light-mode">
    <header>
        <nav class="navbar navbar-expand-sm">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Dashboard" asp-action="Index">
                    💅 SalonTrack
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end align-items-center">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" asp-controller="ServiceTask" asp-action="Index">📝 İşlər</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Expense" asp-action="Index">💸 Xərclər</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Income" asp-action="Index">📈 Gəlirlər</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Service" asp-action="Index">💇‍♀️ Servislər</a></li>
                    </ul>
                    <button id="themeToggle" class="theme-toggle-btn ms-3" title="Tema Dəyiş">🌙</button>
                </div>
            </div>
        </nav>
    </header>

    <div class="container py-4">
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-center border-top">
        <div class="container">
            &copy; 2025 - SalonTrack 💖 | <a class="text-decoration-none" asp-controller="Home" asp-action="Privacy">Gizlilik</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        const body = document.body;
        const toggleBtn = document.getElementById('themeToggle');

        const prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
        const savedTheme = localStorage.getItem('theme');
        const defaultTheme = savedTheme || (prefersDark ? 'dark-mode' : 'light-mode');

        body.classList.remove("light-mode", "dark-mode");
        body.classList.add(defaultTheme);
        toggleBtn.textContent = defaultTheme === 'dark-mode' ? '☀️' : '🌙';

        toggleBtn.addEventListener('click', () => {
            body.classList.toggle('dark-mode');
            body.classList.toggle('light-mode');

            const isDark = body.classList.contains('dark-mode');
            toggleBtn.textContent = isDark ? '☀️' : '🌙';
            localStorage.setItem('theme', isDark ? 'dark-mode' : 'light-mode');
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
