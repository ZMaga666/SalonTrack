<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SalonTrack</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SalonTrack.styles.css" asp-append-version="true" />

    <style>
        body.dark-mode .navbar .dropdown-toggle {
            background-color: #1e1e1e !important;
            color: #f1f1f1 !important;
            border-radius: 5px;
            padding: 6px 10px;
        }

        body.light-mode .navbar .dropdown-toggle {
            background-color: #ffffff !important;
            color: #000000 !important;
            border-radius: 5px;
            padding: 6px 10px;
        }

        body.dark-mode .navbar .dropdown-toggle:hover {
            background-color: #2a2a2a !important;
        }

        body.light-mode .navbar .dropdown-toggle:hover {
            background-color: #f1f1f1 !important;
        }
        .logout-btn {
            border: none;
            padding: 5px 12px;
            border-radius: 4px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        /* Logout düyməsi üçün light və dark mode uyğun dizayn */
        body.light-mode .logout-btn {
            background-color: #fff;
            color: #000;
        }

        body.dark-mode .logout-btn {
            background-color: #1e1e1e;
            color: #fff;
        }

        body.light-mode .logout-btn:hover {
            background-color: #f0f0f0;
        }

        body.dark-mode .logout-btn:hover {
            background-color: #333;
        }


        html {
            transition: background 0.5s, color 0.5s;
        }

        body {
            font-family: 'Segoe UI', sans-serif;
        }

            body.light-mode {
                background: linear-gradient(to right, #f8e1f4, #e1f0ff);
                color: #222;
            }

            body.dark-mode {
                background: linear-gradient(to right, #1a1a, #16213e);
                color: #f1f1f1;
            }

                body.dark-mode .card,
                body.dark-mode .form-control,
                body.dark-mode .table,
                body.dark-mode input,
                body.dark-mode select {
                    background-color: #1e1e1e !important;
                    color: #f1f1f1 !important;
                    border-color: #444 !important;
                }

                    body.dark-mode .table th,
                    body.dark-mode .table td {
                        background-color: #1e1e1e !important;
                        color: #f1f1f1 !important;
                    }

                body.dark-mode .btn {
                    color: white !important;
                }

                body.dark-mode .alert {
                    background-color: #2a2a2a;
                    color: #ddd;
                    border-color: #444;
                }

                body.dark-mode input[type="date"] {
                    background-color: #1e1e1e;
                    color: #f1f1f1;
                }

        .navbar {
            transition: background 0.3s;
        }

        .light-mode .navbar {
            background-color: #fff !important;
            border-bottom: 2px solid #f8c6d8;
        }

        .dark-mode .navbar {
            background-color: #1f1f1f !important;
            border-bottom: 1px solid #444;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.6rem;
            color: #e91e63 !important;
        }

        .nav-link {
            color: inherit !important;
        }

        .footer {
            transition: background 0.3s, color 0.3s;
        }

        .light-mode .footer {
            background-color: #ffeef5;
            color: #666;
        }

        .dark-mode .footer {
            background-color: #1a1a1a;
            color: #aaa;
        }

        .theme-toggle-btn {
            background: none;
            border: none;
            font-size: 1.5rem;
            cursor: pointer;
            transition: transform 0.2s;
        }

            .theme-toggle-btn:hover {
                transform: scale(1.2);
            }
    </style>
</head>
<body class="light-mode">
    <header>
        <nav class="navbar navbar-expand-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Dashboard" asp-action="Index">💅 SalonTrack</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end align-items-center">
                    <ul class="navbar-nav">
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    ⚙️ Əməliyyatlar
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="ServiceTask" asp-action="Index">📝 İşlər</a></li>
                                    <li><a class="dropdown-item" asp-controller="Expense" asp-action="Index">💸 Xərclər</a></li>
                                    <li><a class="dropdown-item" asp-controller="Income" asp-action="Index">📈 Gəlirlər</a></li>
                                    <li><a class="dropdown-item" asp-controller="Service" asp-action="Index">💇‍♀️ Servislər</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto align-items-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" backgr >
                                    👤 @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="px-3">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm logout-btn">🚪 Çıxış</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item ms-2">
                                <button id="themeToggle" class="theme-toggle-btn" title="Tema Dəyiş">🌙</button>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container py-4">
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-center border-top">
        <div class="container">
            &copy; 2025 - SalonTrack 💖 | <a class="text-decoration-none" asp-controller="Home" asp-action="Privacy">Gizlilik</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        const body = document.body;
        const toggleBtn = document.getElementById('themeToggle');

        const prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
        const savedTheme = localStorage.getItem('theme');
        const defaultTheme = savedTheme || (prefersDark ? 'dark-mode' : 'light-mode');

        body.classList.remove("light-mode", "dark-mode");
        body.classList.add(defaultTheme);

        if (toggleBtn) {
            toggleBtn.textContent = defaultTheme === 'dark-mode' ? '☀️' : '🌙';

            toggleBtn.addEventListener('click', () => {
                body.classList.toggle('dark-mode');
                body.classList.toggle('light-mode');

                const isDark = body.classList.contains('dark-mode');
                toggleBtn.textContent = isDark ? '☀️' : '🌙';
                localStorage.setItem('theme', isDark ? 'dark-mode' : 'light-mode');
            });
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
