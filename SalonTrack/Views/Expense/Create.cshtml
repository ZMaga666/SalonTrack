@using SalonTrack.Models
@model Expense
@{
    ViewData["Title"] = "Yeni Xərc Əlavə Et";
}

<style>
    body.dark-mode input,
    body.dark-mode label,
    body.dark-mode .form-control {
        background-color: #1e1e1e;
        color: #f1f1f1;
        border-color: #444;
    }

    body.dark-mode .btn-primary {
        background-color: #375a7f;
        border-color: #375a7f;
    }

    h2 {
        color: inherit;
    }
</style>

<h2>💸 Yeni Xərc Əlavə Et</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Təsvir</label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Amount" class="form-label">Məbləğ (₼)</label>
        <input asp-for="Amount" class="form-control" type="number" step="0.01" />
    </div>
    <button type="submit" class="btn btn-primary">Yadda saxla</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>
