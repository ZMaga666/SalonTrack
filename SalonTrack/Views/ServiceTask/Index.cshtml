@using SalonTrack.Models

@model List<ServiceTask>
@{
    ViewData["Title"] = "Görülən İşlər";
}

<h2>Görülən İşlər</h2>
<a class="btn btn-success mb-3" asp-action="Create">Yeni İş Əlavə Et</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Tarix</th>
            <th>Təsvir</th>
            <th>Qiymət</th>
            <th>Ödəniş Tipi</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Income.Date.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@item.Description</td>
                <td>@item.Income.Amount.ToString("0.00") ₼</td>
                <td>@(item.IsCredit ? "Nisyə" : "Nağd")</td>
                <td>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

