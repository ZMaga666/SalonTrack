@model SalonTrack.Models.ServiceTask
@{
    ViewData["Title"] = "Yeni İş Əlavə Et";
}

<h2>Yeni İş Əlavə Et</h2>

<form asp-controller="ServiceTask" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="ServiceId" class="form-label">Xidmət Seç</label>
        <select asp-for="ServiceId" class="form-select" asp-items="ViewBag.Services">
            <option value="">-- Xidmət seçin --</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label">Qiymət (₼)</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsCredit" class="form-check-input" />
        <label asp-for="IsCredit" class="form-check-label">Nisyə kimi qeyd et</label>
    </div>

    <button type="submit" class="btn btn-primary">Yadda saxla</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>
