@{
    ViewData["Title"] = "SalonTrack Admin Panel";
}

<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">
    <div class="container py-5">
        <h2 class="mb-4 text-center">💼 Admin Panel - SalonTrack</h2>

        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card text-white bg-success mb-3 shadow">
                    <div class="card-body text-center">
                        <h4 class="card-title">📈 Gəlirlər</h4>
                        <p class="card-text">Salon gəlirlərinə bax və yeni gəlir əlavə et.</p>
                        <a href="/Income/Index" class="btn btn-light">Bax</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card text-white bg-danger mb-3 shadow">
                    <div class="card-body text-center">
                        <h4 class="card-title">💸 Xərclər</h4>
                        <p class="card-text">Salonun xərclərini idarə et.</p>
                        <a href="/Expense/Index" class="btn btn-light">Bax</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card text-white bg-primary mb-3 shadow">
                    <div class="card-body text-center">
                        <h4 class="card-title">📝 Xidmət Tapşırıqları</h4>
                        <p class="card-text">Bugünkü və keçmiş tapşırıqları izləyin.</p>
                        <a href="/ServiceTask/Index" class="btn btn-light">Bax</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
