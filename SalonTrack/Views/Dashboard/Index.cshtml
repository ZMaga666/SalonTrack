@{
    ViewData["Title"] = "SalonTrack Admin Panel";
}

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
    }

        body.light-mode {
            background: linear-gradient(to right, #f8e1f4, #e1f0ff);
        }

        body.dark-mode {
            background-color: #121212;
        }

    .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border: none;
        border-radius: 1rem;
        min-height: 260px; /* Sabit hündürlük */
        width: 100%; /* Bootstrap sütununa uyğun genişlik */
        padding: 1.5rem 1rem;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

    .card-title {
        font-weight: bold;
        font-size: 1.4rem;
        margin-bottom: 0.5rem;
    }

    .card-text {
        font-size: 0.95rem;
        flex-grow: 1; /* Text uzunsa belə düymə aşağıda qalır */
    }

    .btn-outline-light {
        font-weight: 600;
        border-width: 2px;
    }

    .section-title {
        font-size: 2rem;
        font-weight: 600;
        color: inherit;
        margin-bottom: 2rem;
    }
</style>

<div class="container py-5">

    <h2 class="text-center section-title">💇‍♀️ SalonTrack - Admin Panel</h2>

    <div class="row g-4 justify-content-center">
        <div class="col-sm-6 col-md-3">
            <div class="card text-white bg-success shadow text-center">
                <div class="card-body d-flex flex-column">
                    <h4 class="card-title">📈 Gəlirlər</h4>
                    <p class="card-text">Salon gəlirlərinə bax və əlavə et.</p>
                    <a href="/Income/Index" class="btn btn-outline-light mt-auto">Bax</a>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-md-3">
            <div class="card text-white bg-danger shadow text-center">
                <div class="card-body d-flex flex-column">
                    <h4 class="card-title">💸 Xərclər</h4>
                    <p class="card-text">Salonun xərclərini idarə et.</p>
                    <a href="/Expense/Index" class="btn btn-outline-light mt-auto">Bax</a>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-md-3">
            <div class="card text-white bg-primary shadow text-center">
                <div class="card-body d-flex flex-column">
                    <h4 class="card-title">📝 Görülən işlər</h4>
                    <p class="card-text">İşçi tapşırıqlarını izləyin və əlavə edin.</p>
                    <a href="/ServiceTask/Index" class="btn btn-outline-light mt-auto">Bax</a>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-md-3">
            <div class="card text-white bg-info shadow text-center">
                <div class="card-body d-flex flex-column">
                    <h4 class="card-title">💇‍♀️ Servislər</h4>
                    <p class="card-text">Əlavə et və qiymətlərini təyin et.</p>
                    <a href="/Service/Index" class="btn btn-outline-light mt-auto">Bax</a>
                </div>
            </div>
        </div>

        <!-- ✅ Yeni: Rol idarəsi üçün Card -->
        <div class="col-sm-6 col-md-3">
            <div class="card text-white bg-dark shadow text-center">
                <div class="card-body d-flex flex-column">
                    <h4 class="card-title">🛡️ Rol İdarəetməsi</h4>
                    <p class="card-text">Yeni rol yarat və ya istifadəçi təyin et.</p>
                    <a href="/Role/Index" class="btn btn-outline-light mt-auto">Bax</a>
                </div>
            </div>
        </div>
    </div>
</div>
